	"engines": {
		"node": ">=v16"
	},
	"main": "dist/cjs/src/Emitter.js",
	"module": "dist/esm/src/Emitter.js",
	"exports": {
		".": {
			"import": "./dist/esm/src/Emitter.js",
			"require": "./dist/cjs/src/Emitter.js"
		}
	},
	"scripts": {
		"tsc-b": "tsc -b",
		"build": "tsc -p tsconfig-esm.json && tsc -p tsconfig-cjs.json && sh ./fixup.sh",
		"build-watch": "tsc --watch",
		"fix-paths-watch": "npx @irrelon/fix-paths --write --watch",
		"fix-paths": "npx @irrelon/fix-paths --write",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest -f \".test.js\" --watch --all"
	},
	"dependencies": {
		"websocket": "^1.0.34"
	},
