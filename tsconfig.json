{
	"compilerOptions": {
		"rootDir": "./src",
		"downlevelIteration": true,
		"baseUrl": ".",
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"incremental": true,
		"esModuleInterop": true,
		"module": "es2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "ige-jsx",
		"declaration": true,
		"declarationDir": "dist/types",
		"noImplicitAny": false,
		"composite": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "react", "engine/ui", "engine/components/editor", "engine/components/physics"],
	"files": [
		"engine/components/physics/box2d/IgeBox2dDebugPainter.ts",
		"engine/components/physics/box2d/IgeEntityBox2d.ts",
		"engine/components/physics/box2d/IgeBox2dController.ts"
	]
}
