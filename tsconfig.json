{
	"compilerOptions": {
		"rootDir": "./src",
		"downlevelIteration": true,
		"baseUrl": ".",
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"incremental": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "ige-jsx",
		"declaration": false,
		"noImplicitAny": false,
		"composite": false,
		"verbatimModuleSyntax": false,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"types": [
			"@webgpu/types",
			"@types/jest"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"react",
		"engine/ui",
		"engine/components/editor",
		"engine/components/physics/cannon",
		"engine/components/three",
		"src/**/*.old*",
		"other/*",
		"other/**",
		"other/**/*",
		"dist",
		"dist/*",
		"dist/**",
		"dist/**/*"
	]
}
