{
	"compilerOptions": {
		"rootDir": "./src",
		"downlevelIteration": true,
		"baseUrl": ".",
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"incremental": true,
		"esModuleInterop": true,
		"module": "es2022",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "ige-jsx",
		"declaration": true,
		"noImplicitAny": false,
		"composite": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"react",
		"engine/ui",
		"engine/components/editor",
		"engine/components/physics/cannon",
		"engine/components/three"
	]
}
